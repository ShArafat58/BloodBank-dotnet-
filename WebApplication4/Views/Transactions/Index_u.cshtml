@model IEnumerable<WebApplication4.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_Layout_u.cshtml";
}

<style>
    body {
        background: url('https://www.capecodhealth.org/app/files/public/9919/COVIDBloodDonate_cchn.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .container-custom {
        background: rgba(255, 255, 255, 0.9); /* Slight white overlay */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 20px;
    }

    h1 {
        text-align: center;
        font-weight: bold;
        color: #8B0000; 
        margin-bottom: 20px;
    }

    .table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

        .table thead {
            background-color: #8B0000;
            color: white;
            text-align: center;
        }

        .table th {
            padding: 12px;
            font-size: 16px;
        }

        .table tbody tr:hover {
            background-color: rgba(139, 0, 0, 0.1);
        }

        .table td {
            padding: 10px;
            vertical-align: middle;
        }
</style>

<div class="container container-custom">
    <h1>Transaction History</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>User Name</th>
                <th>User ID</th>
                <th>Blood Type</th>
                <th>Status</th>
                @* <th>Type</th> *@
                <th>Quantity</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>123</td>
                <td>Sh Arafat</td>
                <td>1</td>
                <td>B+</td>
                <td>Success</td>
                
                <td>2 bags</td>
                <td>200 BDT</td>
                <td>10/03/25</td>
            </tr>

            <tr>
                <td>124</td>
                <td>Mayesha Kader</td>
                <td>2</td>
                <td>O+</td>
                <td>Success</td>

                <td>3 bags</td>
                <td>200 BDT</td>
                <td>05/03/25</td>
            </tr>

            <tr>
                <td>125</td>
                <td>Tasmiah Binte Iqbal</td>
                <td>3</td>
                <td>AB+</td>
                <td>Pending</td>

                <td>1 bags</td>
                <td>200 BDT</td>
                <td>09/03/25</td>
            </tr>

            <tr>
                <td>126</td>
                <td>Eifa</td>
                <td>4</td>
                <td>AB-</td>
                <td>Not Available</td>

                <td>2 bags</td>
                <td>200 BDT</td>
                <td>01/02/25</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.t_Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.u_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.u_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_bloodtype)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_status)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_type)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_bloodquantity) units</td>
                    <td>$@Html.DisplayFor(modelItem => item.t_bloodprice)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_date)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
