@model WebApplication4.Models.Admin

@{
    ViewData["Title"] = "Admin Login";
}

<style>
    /* Background Image */
    body {
        background: url('https://images.unsplash.com/photo-1524721696987-b9527df9e512?q=80&w=1933&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
        background-size: cover;
    }

    /* Overlay */
    .overlay {
        background: rgba(0, 0, 0, 0.6);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Login Container */
    .login-container {
        position: relative;
        z-index: 1;
    }

    .card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    h1 {
        color: #D32F2F;
        font-weight: bold;
        text-align: center;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #D32F2F;
        border: none;
        padding: 10px;
        border-radius: 8px;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #B71C1C;
        }

    .text-danger {
        font-weight: bold;
    }
</style>

<!-- Overlay -->
<div class="overlay"></div>

<!-- Login Form -->
<div class="container d-flex justify-content-center align-items-center min-vh-100 login-container">
    <div class="col-md-5">
        <div class="card">
            <h1>Admin Login</h1>
            <hr>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Admin ID:</label>
                    <input type="number" asp-for="Id" class="form-control" placeholder="Enter Admin ID" required />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label">Password:</label>
                    <input type="password" asp-for="password" class="form-control" placeholder="Enter Password" required />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                @if (ViewBag.v == true)
                {
                    <div class="form-group text-center">
                        <p class="text-danger">Incorrect Admin ID or Password</p>
                    </div>
                }
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
