@model IEnumerable<WebApplication4.Models.Employee>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    /* Background Styling */
    body {
        background: url('https://st5.depositphotos.com/39275882/71390/i/950/depositphotos_713903586-stock-photo-empty-people-one-hospital-hall.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Arial', sans-serif;
    }

    /* Container for better readability */
    .container {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 30px;
    }

    /* Title Styling */
    h1 {
        text-align: center;
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Table Styling */
    .table {
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        background: white;
    }

        .table th {
            background-color: #0275d8;
            color: white;
            text-align: center;
            padding: 12px;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
            padding: 12px;
        }

        .table tbody tr:hover {
            background-color: rgba(2, 117, 216, 0.2);
        }

    /* Button Styling */
    .btn {
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-primary {
        background-color: #0275d8;
        color: white;
    }

        .btn-primary:hover {
            background-color: #025aa5;
        }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-add {
        display: inline-block;
        margin-bottom: 15px;
        font-size: 16px;
        background-color: #5bc0de;
        color: white;
    }

        .btn-add:hover {
            background-color: #31b0d5;
        }

    /* Hide passwords for security */
    .password-mask {
        font-weight: bold;
        letter-spacing: 3px;
    }
</style>

<div class="container">
    <h1>Employees</h1>

    <p>
        <a asp-action="Create" class="btn btn-add">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Email Address</th>
                <th>Password</th>
                <th>Status</th>
                <th>Centre ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.e_Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.e_Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.e_Email)</td>
                    <td class="password-mask">******</td> <!-- Masking password -->
                    <td>@Html.DisplayFor(modelItem => item.status)</td>
                    <td>@Html.DisplayFor(modelItem => item.e_centre_id)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.e_Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.e_Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
