@model IEnumerable<WebApplication4.Models.Hospital>

@{
    ViewData["Title"] = "Hospitals";
    Layout = "~/Views/Shared/_Layout_u.cshtml";
}

<h1>Hospitals</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.h_img)">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.h_name)</h5>
                        <p class="card-text">
                            <b>Address:</b> @Html.DisplayFor(modelItem => item.h_location)
                            <br>
                            <b>Google Maps:</b> <a href="@item.h_loc_url">Location</a>
                        </p>
                        <a href="@Url.Action("Index_u", "Blood_data", new { u_id = ViewData["id"], param1 = item.h_Id, wallet = ViewData["wallet"], name = ViewData["name"], auth = ViewData["auth"] })" class="btn btn-success mt-3">Check Availability</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
