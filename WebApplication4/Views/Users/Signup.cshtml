@model WebApplication4.Models.User

@{
    ViewData["Title"] = "Signup";
}

<style>
    body {
        background: url('https://images.unsplash.com/photo-1542884841-9f546e727bca?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
        background-size: cover;
    }

    .signup-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 30px;
        width: 400px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
    }

    .btn-primary {
        border-radius: 10px;
        padding: 12px;
        font-size: 16px;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="signup-container text-white text-center">
        <h2 class="mb-3">Signup</h2>
        <form asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <input asp-for="u_Name" class="form-control" placeholder="Name" required />
                <span asp-validation-for="u_Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="u_Email" class="form-control" type="email" placeholder="Email" required />
                <span asp-validation-for="u_Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="u_Password" class="form-control" type="password" placeholder="Password" required />
                <span asp-validation-for="u_Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="u_PhoneNumber" class="form-control" type="text" placeholder="Phone Number" required />
                <span asp-validation-for="u_PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="u_Address" class="form-control" type="text" placeholder="Address" required />
                <span asp-validation-for="u_Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <select asp-for="u_bloodgroup" class="form-control">
                    <option value="A+">A Positive</option>
                    <option value="A-">A Negative</option>
                    <option value="B+">B Positive</option>
                    <option value="B-">B Negative</option>
                    <option value="AB+">AB Positive</option>
                    <option value="AB-">AB Negative</option>
                    <option value="O+">O Positive</option>
                    <option value="O-">O Negative</option>
                </select>
                <span asp-validation-for="u_bloodgroup" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Signup</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}