@model IEnumerable<WebApplication4.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    /* Background Styling */
    body {
        background: url('https://st.depositphotos.com/36924814/52185/i/950/depositphotos_521852740-stock-photo-hexagon-cross-geometric-blue-green.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Arial', sans-serif;
    }

    /* Table Styling */
    .table-container {
        max-width: 90%;
        margin: 30px auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Search Bar */
    .search-bar {
        text-align: center;
        margin-bottom: 20px;
    }

        .search-bar input[type="text"] {
            padding: 8px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-bar input[type="submit"] {
            padding: 8px 15px;
            background-color: #0275d8;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .search-bar input[type="submit"]:hover {
                background-color: #025aa5;
            }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table thead {
            background-color: #0275d8;
            color: white;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #e6f7ff;
            transition: 0.3s;
        }

    /* Action Buttons */
    .action-buttons a {
        text-decoration: none;
        padding: 5px 10px;
        margin: 2px;
        border-radius: 5px;
        font-size: 14px;
    }

    .close-btn {
        background-color: #28a745;
        color: white;
    }

        .close-btn:hover {
            background-color: #218838;
        }

    .delete-btn {
        background-color: #dc3545;
        color: white;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }
</style>

<div class="table-container">
    <h1>Manage Transactions</h1>

    <div class="search-bar">
        <form asp-controller="Admin" asp-action="Index_s" method="get">
            <input type="text" name="searchString" placeholder="Search by Transaction ID or User Name" />
            <input type="submit" value="Search" />
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>User ID</th>
                <th>Blood Type</th>
                <th>Status</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Date</th>
                @* <th>Actions</th> *@
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Sh Arafat</td>
                <td>1</td>
                <td>B+</td>
                <td>Success</td>
                <td>1 bag</td>
                <td>100 BDT</td>
                <td>10.03.2025</td>
                <td></td>
            </tr>

            <tr>
                <td>Eifa</td>
                <td>2</td>
                <td>O+</td>
                <td>Success</td>
                <td>2 bag</td>
                <td>200 BDT</td>
                <td>02.03.2025</td>
                <td></td>
            </tr>

            <tr>
                <td>Tasmiah Binte Iqbal</td>
                <td>1</td>
                <td>AB+</td>
                <td>Success</td>
                <td>3 bag</td>
                <td>100 BDT</td>
                <td>28.02.2025</td>
                <td></td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.u_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.u_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_bloodtype)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_status)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_bloodquantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_bloodprice)</td>
                    <td>@Html.DisplayFor(modelItem => item.t_date)</td>
                    <td class="action-buttons">
                        @if (String.Equals(@item.t_status, "Pending"))
                        {
                            <a asp-action="Close" asp-route-id="@item.t_Id" class="close-btn">Close</a>
                        }
                        <a asp-action="Delete" asp-route-id="@item.t_Id" class="delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
