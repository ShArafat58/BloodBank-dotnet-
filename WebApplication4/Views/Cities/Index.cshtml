@model IEnumerable<WebApplication4.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    body {
        background: url('https://as1.ftcdn.net/jpg/02/38/16/06/1000_F_238160640_O7yVyntTmIikIejXgdoARTQW5siJ3QVH.webp') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Arial', sans-serif;
    }

    .container {
        background: rgba(255, 255, 255, 0.85);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 30px;
    }

    h1 {
        text-align: center;
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        background: white;
    }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
            padding: 10px;
        }

        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.2);
        }

    .btn {
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    .btn-add {
        display: inline-block;
        margin-bottom: 15px;
        font-size: 16px;
    }
</style>

<div class="container">
    <h1>Cities</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-add">Add New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>City ID</th>
                <th>City Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.c_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.c_name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.c_id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.c_id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
