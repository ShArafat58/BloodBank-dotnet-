user privacy@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_Layout_u.cshtml";
}
<h1>@ViewData["Title"]</h1>





<section class="py-5 position-relative"
         style="background: url('https://i.cbc.ca/1.6674157.1704993619!/fileImage/httpImage/image.jpg_gen/derivatives/16x9_1180/hema-quebec.jpg?im=Resize%3D780')
                no-repeat center center;
                background-size: cover;">
    <!-- Semi-Transparent Overlay -->
    <div style="background-color: rgba(255, 255, 255, 0.7); position: absolute; top: 0; bottom: 0; left: 0; right: 0;"></div>

    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow">
                    <div class="card-header bg-danger text-white">
                        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h3 class="h5 text-danger">Information Collection</h3>
                            <p>We collect personal information strictly necessary for blood donation management, including contact details, medical history, and donation records.</p>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 text-danger">Data Protection</h3>
                            <p>Your information is protected using industry-standard security measures including:</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">256-bit SSL encryption</li>
                                <li class="list-group-item">Regular security audits</li>
                                <li class="list-group-item">Role-based access control</li>
                            </ul>
                        </div>

                        <div class="mb-4">
                            <h3 class="h5 text-danger">Third-Party Sharing</h3>
                            <p>We never sell or share donor information with external parties except:</p>
                            <ol class="list-group list-group-numbered">
                                <li class="list-group-item">Verified medical institutions during emergencies</li>
                                <li class="list-group-item">Government agencies as required by law</li>
                            </ol>
                        </div>

                        <div class="alert alert-danger mt-4">
                            <h4 class="alert-heading">Contact Us</h4>
                            <p>
                                For privacy concerns or data requests:<br>
                                <strong>Email:</strong> shahriararafat20@gmail.com<br>
                                <strong>Phone:</strong> 01999990517
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>